<?xml version="1.0" encoding="utf-8"?>
<khm.kaunghtetmyint.burpple.viewpods.LoginFormViewPod
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/drawer_background"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="@dimen/regular_user_profile"
        android:layout_height="@dimen/regular_user_profile"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:src="@drawable/dummy_user_picture" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_user_profile"
        android:layout_below="@+id/iv_user_profile"
        android:text="Kaung Htet Myint"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_user_profile"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="+95 9 792237627"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/white_full"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_medium_2"
        style="@style/accent_button"/>

</khm.kaunghtetmyint.burpple.viewpods.LoginFormViewPod>